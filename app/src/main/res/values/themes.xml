<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UCInternship" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text2</item>
        <item name="colorPrimaryVariant">@color/var_prim</item>
        <item name="colorOnPrimary">@color/bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/card_status</item>
        <item name="colorSecondaryVariant">@color/card_profile</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolbarTheme" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>